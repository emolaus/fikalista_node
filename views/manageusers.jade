doctype html
html(lang='en')
head
  title=fikalistan
  meta(charset='utf-8' name='viewport' content='width=device-width, initial-scale=1')
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
  link(rel="stylesheet" href="/stylesheets/style.css")
  script.
    var groupurl = "#{groupurl}";
body
  nav.navbar.navbar-default.navbar-static-top
    .container-fluid
      
      .navbar-header
        button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        
        a(class="navbar-brand" href="#") Manage users
      div#navbar.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href="/#{groupurl}/mainview") Main view
          li
            a(href="/#{groupurl}/manageweeks") Manage weeks

  button(type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#addUserModal") Add user
  button(type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#removeUserModal") Remove user
  button(type="button" class="btn btn-primary btn-block") Edit user
  button(type="button" class="btn btn-primary btn-block") Change weeks between users

  div(class="modal fade" id="addUserModal" role="dialog")
    div(class="modal-dialog")
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal") 
          h4.modal-title Add user
        .modal-body
          form(role="form")
            .form-group
              label(for="name") Name (should be unique for the group):
              input(type="text" class="form-control" id="name")
              label(for="email") Email (optional, for reminders):
              input(type="email" class="form-control" id="email")
        .modal-footer
          button(type="button" class="btn btn-default" data-dismiss="modal") Cancel 
          button(type="button" class="btn btn-default" id="addWeekExceptionButton") Add

  div(class="modal fade" id="removeUserModal" role="dialog")
    div(class="modal-dialog")
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal") 
          h4.modal-title Remove user
        .modal-body
          .form-group
            label(for="sel1") Select list:
            select(class="form-control" id="sel1")
              option 1
              option 2
              option 3
              option 4

        .modal-footer
          button(type="button" class="btn btn-default" data-dismiss="modal") Cancel 
          button(type="button" class="btn btn-default" id="addWeekExceptionButton") Remove
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
